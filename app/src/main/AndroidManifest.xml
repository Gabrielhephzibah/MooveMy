<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.enyata.android.mvvm_java">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".MvvmApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_moovelauncher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_moovelauncher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.monthlyReport.vehicleMaintenance.MaintenanceActivity"></activity>
        <activity android:name=".ui.monthlyReport.vehicleMonthlyReport.MonthlyReportActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            />
        <activity android:name=".ui.monthlyReport.vehicleList.VehicleListActivity" />
        <activity android:name=".ui.signature.MonthlySignature.MonthlySignatureActivity" />
        <activity android:name=".ui.repair.repairs.RepairsActivity" />
        <activity
            android:name=".ui.repair.repairList.RepairListActivity"
            android:theme="@style/AppTheme.whiteStatusBar" />
        <activity android:name=".ui.response.failedResponse.FailedActivity" />
        <activity android:name=".ui.response.ResponseActivity" />
        <activity android:name=".ui.loading.LoadingActivity" />
        <activity
            android:name=".ui.signature.SignatureActivity"
            android:theme="@style/AppTheme.greyStatusBar" />
        <activity
            android:name=".ui.createReport.CreateReportActivity"
            android:theme="@style/AppTheme.whiteStatusBar"
            android:configChanges="orientation|screenSize|keyboardHidden"
            />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.mainActivity.MainActivity" />
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="CLOUDINARY_URL"
            android:value="cloudinary:mooveafrica" /> <!-- <meta-data android:name="CLOUDINARY_URL" android:value="cloudinary://@myCloudName"/> -->
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_path" />
        </provider>
    </application>

</manifest>