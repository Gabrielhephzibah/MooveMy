<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.enyata.android.mvvm_java.ui.mainActivity.MainActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.enyata.android.mvvm_java.ui.mainActivity.MainActivityViewModel" />

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        >


        <FrameLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="120dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/rectangle_shape_background" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:background="@drawable/semi_circle_background">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/ic_logo" />


            </RelativeLayout>


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Welcome ,"
                android:textColor="#4c4c4c"
                android:textSize="32dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ola"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="#4c4c4c"
                android:textSize="32dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/montserrat"
                android:textScaleX = "1.2"
                android:lineSpacingMultiplier="1.2"
                android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam."
                android:textSize="14dp" />




            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/transparent_background"
                android:layout_height="145dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/vehincleIntake"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        app:srcCompat="@drawable/ic_vehincleintake" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="49dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/vehincletext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="Vehicle Intake report"
                            android:textColor="#000000"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:lineSpacingMultiplier="1.2"
                            android:fontFamily="@font/montserrat"
                            android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed"
                            android:textScaleX="1.2"
                            android:textSize="10dp" />
                    </LinearLayout>


                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_marginRight="61dp"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/createReport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="#E53012"
                        android:lines="1"
                        android:text="CREATE REPORT">



                    </TextView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        app:srcCompat="@drawable/ic_arrow_forward_black"
                        android:layout_toRightOf="@id/createReport"/>
                </LinearLayout>




            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/transparent_background"
                android:layout_height="145dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/monthlyReport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        app:srcCompat="@drawable/ic_monthlyreport" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="49dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/vehincleReportte"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="Monthly report"
                            android:textColor="#000000"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:lineSpacingMultiplier="1.2"
                            android:fontFamily="@font/montserrat"
                            android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed"
                            android:textScaleX="1.2"
                            android:textSize="10dp" />
                    </LinearLayout>


                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_marginRight="61dp"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/createReportMonthly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="#E53012"
                        android:lines="1"
                        android:text="CREATE REPORT">



                    </TextView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        app:srcCompat="@drawable/ic_arrow_forward_black"
                        android:layout_toRightOf="@id/createReport"/>
                </LinearLayout>




            </LinearLayout>



        </LinearLayout>





    </LinearLayout>

</layout>