<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.enyata.android.mvvm_java.ui.signature.MonthlySignature.MonthlySignatureActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.enyata.android.mvvm_java.ui.signature.MonthlySignature.MonthlySignatureViewModel" />

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/grey_new"
                android:layout_height="200dp">
            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="100dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:background="@drawable/two_edge_curve_background">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:orientation="vertical"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Draw signature in the box"
                        android:textSize="14sp"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <LinearLayout
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#BABABA"
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat"
                            android:textStyle="bold"
                            android:text="Inspector Signature"/>

                        <RelativeLayout
                            android:layout_marginTop="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="125dp"
                            android:background="@drawable/transparent_background">

                            <com.github.gcacace.signaturepad.views.SignaturePad
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:id="@+id/inspectorSignature"/>

                            <TextView
                                android:onClick="@{()->viewModel.onSaveInspectorSign()}"
                                android:id="@+id/saveInspectorSignature"
                                android:paddingBottom="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:layout_alignParentBottom="true"
                                android:textColor="#373737"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/montserrat"
                                android:paddingLeft="10dp"
                                android:text="@string/save"/>

                            <TextView
                                android:onClick="@{()->viewModel.onClearInspectorSign()}"
                                android:id="@+id/clearInspectorSignature"
                                android:paddingBottom="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:gravity="end"
                                android:textColor="#373737"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/montserrat"
                                android:paddingRight="10dp"
                                android:text="@string/clear"/>

                        </RelativeLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/supplierTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#BABABA"
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat"
                            android:textStyle="bold"
                            android:text="Driver Signature"/>

                        <RelativeLayout
                            android:layout_marginTop="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="125dp"
                            android:background="@drawable/transparent_background">

                            <com.github.gcacace.signaturepad.views.SignaturePad
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:id="@+id/supplierSignature"/>

                            <TextView
                                android:onClick="@{()->viewModel.onSaveSupplierSign()}"
                                android:id="@+id/saveSupplierSignature"
                                android:paddingBottom="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:layout_alignParentBottom="true"
                                android:textColor="#373737"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/montserrat"
                                android:paddingLeft="10dp"
                                android:text="@string/save"/>


                            <TextView
                                android:onClick="@{()->viewModel.onClearSupplierSign()}"
                                android:id="@+id/clearSupplierSignature"
                                android:paddingBottom="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:textColor="#373737"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/montserrat"
                                android:paddingRight="10dp"
                                android:text="@string/clear"/>

                        </RelativeLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="39dp">

                        <Button
                            android:onClick="@{()->viewModel.onSubmit()}"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_radius_background"
                            android:text="SUBMIT"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



        </FrameLayout>


    </LinearLayout>

</layout>