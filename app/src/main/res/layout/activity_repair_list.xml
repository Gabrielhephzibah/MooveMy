<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.enyata.android.mvvm_java.ui.repair.repairList.RepairListActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.enyata.android.mvvm_java.ui.repair.repairList.RepairListViewModel" />

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:onClick="@{()->viewModel.onBack()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_back_black"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="16dp" />

        <LinearLayout
            android:background="#fbf5f5"
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="100dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="23dp"
                android:layout_marginLeft="23dp">

                <LinearLayout
                    android:id="@+id/search"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:orientation="vertical"
                    android:background="@drawable/search_icon_border">
                    <SearchView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



                </LinearLayout>
                <LinearLayout
                  android:layout_toRightOf="@+id/search"
                    android:layout_width="295dp"
                    android:layout_height="45dp"
                    android:background="@drawable/search_view_layout">

                    <EditText
                        android:textCursorDrawable="@null"
                        android:layout_width="match_parent"
                        android:backgroundTint="@color/transparent"
                        android:layout_height="match_parent"/>

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:background="@drawable/transparent_background">

                    <RelativeLayout
                        android:layout_marginTop="26dp"
                        android:layout_width="match_parent"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="40dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/carImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_repaircar"/>

                        <LinearLayout
                            android:paddingLeft="40dp"
                            android:layout_toRightOf="@+id/carImage"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/year"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat"
                                    android:paddingLeft="10dp"
                                    android:text="2016"
                                    android:textColor="#000000"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/make"
                                    android:layout_toRightOf="@+id/year"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat"
                                    android:paddingLeft="5dp"
                                    android:text="Toyota"
                                    android:textColor="#000000"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />
                                <TextView

                                    android:layout_toRightOf="@+id/make"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat"
                                    android:paddingLeft="5dp"
                                    android:text="Hilux"
                                    android:textColor="#000000"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />


                            </RelativeLayout>

                            <RelativeLayout
                                android:onClick="@{()->viewModel.onProceedRepair()}"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/proceedRepair"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#E53012"
                                android:textSize="10sp"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="PROCEED TO REPAIR"/>

                                <ImageView
                                    android:paddingTop="5dp"
                                    android:paddingLeft="17dp"
                                    android:layout_toRightOf="@+id/proceedRepair"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/ic_arrow_next"/>


                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>



                </LinearLayout>



            </LinearLayout>













        </LinearLayout>






    </LinearLayout>




    </ScrollView>
</layout>