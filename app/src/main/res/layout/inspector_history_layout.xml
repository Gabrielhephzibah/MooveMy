<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:background="@drawable/transparent_background">

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="30dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/carImage"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_repaircar"/>

                <LinearLayout
                    android:paddingLeft="21dp"
                    android:layout_toRightOf="@+id/carImage"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/mooveId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MVANCC001-16TOCRGY008"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat"/>
                    <RelativeLayout
                        android:layout_gravity="end"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/carYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="2016"
                            android:textColor="#000000"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/carMake"
                            android:layout_toRightOf="@+id/carYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:paddingLeft="5dp"
                            android:text="Toyota"
                            android:textColor="#000000"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/carModel"
                            android:layout_toRightOf="@+id/carMake"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:paddingLeft="5dp"
                            android:text="Hilux"
                            android:textColor="#000000"
                            android:textSize="14dp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_gravity="right"
                        android:gravity="right"

                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/proceedRepair"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#E53012"
                            android:textSize="10sp"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="PROCEED TO REPAIR"/>

                        <ImageView
                            android:paddingTop="5dp"
                            android:paddingLeft="17dp"
                            android:layout_toRightOf="@+id/proceedRepair"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_arrow_next"/>


                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>



        </LinearLayout>



    </LinearLayout>

</LinearLayout>