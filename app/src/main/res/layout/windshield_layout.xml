<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        android:elevation="10dp"
        app:cardCornerRadius="14dp"
        tools:targetApi="lollipop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wind Shield"
                android:textColor="#2A2E43"
                android:textSize="14dp"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:id="@+id/radioGroup">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#373737"
                    android:fontFamily="@font/montserrat"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPrimaryDark"
                    android:text="Good"/>

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#373737"
                    android:fontFamily="@font/montserrat"
                    android:layout_height="wrap_content"
                    android:text="Fair"/>

                <RadioButton
                    android:textColor="#373737"
                    android:layout_width="0dp"
                    android:fontFamily="@font/montserrat"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Poor"/>




            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:background="@drawable/dotted_line_background"
                android:layout_height="72dp">



                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginTop="25dp"
                        android:id="@+id/upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_cancel_black"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="18dp"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UPLOAD IMAGES"
                            android:textColor="#BBBBBB"
                            android:fontFamily="@font/montserrat_bold"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CLICK TO SELECT IMAGES"
                            android:textColor="#BBBBBB"
                            android:textSize="8dp"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/montserrat"/>
                    </LinearLayout>
                </RelativeLayout>






            </LinearLayout>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/firstPicture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/car" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/secondPicture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:paddingRight="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/car" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>



        <FrameLayout
            android:id="@+id/thirdPicture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="5dp">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                app:fabCustomSize="19dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/thirdPic"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/car" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>





        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>